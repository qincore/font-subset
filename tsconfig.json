{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/index.ts"
  ]
}
